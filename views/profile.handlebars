<div class='flex flex-col md:flex-row'>
  <div class='w-full md:w-1/2'>
    <div class='flex justify-center'>
      <div class='w-full md:w-2/3'>
        <h2 class='text-left text-4xl font-bold'>Welcome, {{name}}!</h2>
      </div>
    </div>
    <div class='flex justify-center mt-12 pl-20'>
      <img class='h-auto max-w-sm rounded-sm' src='/images/oldbug.png' />
    </div>
  </div>

  <div class='w-full md:w-1/2'>
    <div class='flex justify-center mt-12'>
      <div class='w-full md:w-2/3 new-bite-submission'>
        <h3 class='text-left text-2xl font-medium'>Submit a new bite:</h3>
        <form class='form new-bite-form'>
          <div class='form-group'>
            <label for='bite-headline'>Please enter a title:</label>
            <input
              class='form-input'
              type='text'
              id='bite-headline'
              name='bite-headline'
              placeholder:'text-slate-400 block bg-white w-full border border-slate-300 rounded-md py-2 pl-9 pr-3 shadow-sm sm:text-sm" placeholder="What insect bit me?" type="text" name="search"'
            />
          </div>
          {{! //add form group for image_url: }}
          {{! <div class="form-group">
        <label for="project-funding">needed funding ($):</label>
        <input class="form-input" type="number" id="project-funding" name="project-funding" />
      </div> }}
          <div class='form-group'>
            <label for='bite-content'>List any symptoms you are experiencing:</label>
            <input
              class='form-input'
              id='bite-content'
              name='bite-content'
              placeholder:'text-italic text-slate-400 block bg-white w-full border border-slate-300 rounded-md py-2 pl-9 pr-3 shadow-sm sm:text-sm" placeholder="swelling, discomfort, itching..." type="text" name="search"'
              />
          </div>
          <div class='form-group'>
            <label for='bite-image_url'>Please upload pictures of your bite:</label>

            <form enctype='multipart/form-data' id='bite-image-form'>
              <input
                type='file'
                id='bite-image_url'
                name='bite-image_url'
                accept='image/'
                required
                multiple
              />
              <button
                type='submit'
                class='bg-green-400 hover:bg-green-600 text-white px-4 py-2 rounded-md hidden'
                id='upload-button'
              >Upload picture</button>
            </form>
          </div>
          <div class='flex justify-center'>
            <div class='w-full md:w-2/3'>
              <div class='form-group flex justify-center'>
                <button
                  type='submit'
                  class='bg-green-400 hover:bg-green-600 text-white px-20 py-2 rounded-md'
                  id='new-bite'
                >Submit</button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>

    {{#if bites.length}}
      <div class='flex justify-center mb-5 mt-10'>
        <div class='w-full md:w-2/3 bite-list'>
          <h3 class='text-left text-2xl font-medium'>Bites you have submitted:</h3>

          {{#each bites as |bite|}}
            <div class='flex justify-between items-center mt-5'>
              <div>
                <a href='/bites/{{bite.id}}'>{{bite.headline}}</a>
              </div>
              <div class='delete-list'>
                <button
                  class='bg-red-500 hover:bg-red-600 text-white px-2 py-1 rounded-md'
                  data-id='{{bite.id}}'
                >DELETE</button>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    {{/if}}
  </div>
</div>

<script src='./js/profile.js'></script>